
@using ThinkProWebsite.Models
@{
    Layout = null;
 }


<nav class="categories">
    <ul class="clearfix">
        <li>
            <span>
                <a href="#">
                    <span class="hamburger hamburger--spin">
                        <span class="hamburger-box">
                            <span class="hamburger-inner"></span>
                        </span>
                    </span>
                    Danh Mục
                </a>
            </span>
            <div id="menu">
                <ul>
                   
                    @foreach (LOAI loai in ViewBag.Loai)
                    {
                        <li>
                             <span><a href="#@loai.ID_LOAI">@loai.TENLOAI</a></span>
                             <ul>
                                 @foreach (THUONGHIEU th in ViewBag.ThuongHieu)
                                 {
                                     <li><a href="#@th.ID_BRAND">@th.TENTH</a></li>
                                 }
                             </ul>
                        </li>
                    }

                </ul>
            </div>
        </li>
    </ul>
</nav>