@model ThinkProWebsite.Models.SANPHAM
@using ThinkProWebsite.Models;
@{ ViewBag.Title = @Html.DisplayFor(model => model.TENSP);
                Layout = "~/Views/Shared/_Layout.cshtml"; }
<!-- SPECIFIC CSS -->
<link href="~/assets/css/product_page.css" rel="stylesheet">

<div class="container margin_30">
    <div class="row">
        <div class="col-lg-6 magnific-gallery">
            <p>
                <a href="@Html.DisplayFor(model => model.ANH_SP)" title="Photo title" data-effect="mfp-zoom-in"><img src="@Html.DisplayFor(model => model.ANH_SP)" alt="" class="img-fluid"></a>
            </p>
        </div>
        <div class="col-lg-6" id="sidebar_fixed">
            <div class="breadcrumbs">
                <ul>
                    <li><a href="@Url.Action("Index","Home")">Trang Chủ</a></li>
                    <li><a href="@Url.Action("Products","Home")">Sản Phẩm</a></li>
                    <li>@Html.DisplayFor(model => model.TENSP)</li>
                </ul>
            </div>
            <!-- /page_header -->
            <div class="prod_info">
                <h1>@Html.DisplayFor(model => model.TENSP)</h1>
                <span class="rating">
                    @if (ViewBag.AvgReview != null)
                    {
                        for (int x = 0; x < Math.Floor(ViewBag.AvgReview); x++)
                        {
                            <i class="icon-star voted"></i>
                        }
                        for (double x = Math.Floor(ViewBag.AvgReview); x < 5; x++)
                        {
                            <i class="icon-star"></i>
                        }
                    }
                    else
                    {
                        for (double x = 0; x < 5; x++)
                        {
                            <i class="icon-star"></i>
                        }
                    }



                    <em>@ViewBag.ListReview.Count reviews</em>
                </span>
                @*<p><small>SKU: MTKRY-001</small><br>Sed ex labitur adolescens scriptorem. Te saepe verear tibique sed. Et wisi ridens vix, lorem iudico blandit mel cu. Ex vel sint zril oportere, amet wisi aperiri te cum.</p>
                    <p>Vix patrioque cotidieque ad, iusto probatus volutpat id pri. Amet dicam omnesque at est, voluptua assueverit ut has, modo hinc nec ea. Quas nulla labore est ne, est in quod solet labitur, sit ne probo mandamus.</p>*@
                <div class="prod_options">
                    <div class="row">
                        <label class="col-xl-5 col-lg-5  col-md-6 col-6"><strong>Số Lượng</strong></label>
                        <div class="col-xl-4 col-lg-5 col-md-6 col-6">
                            <div class="numbers-row">
                                <input type="text" value="1" id="quantity_1" class="qty2" name="Số Lượng">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-5 col-md-6">
                        <div class="price_main"><span class="new_price">@string.Format("{0:N0}", Model.GIATIEN) @Model.DONVITINH</span>@*<span class="percentage">-20%</span> <span class="old_price">$160.00</span>*@</div>
                    </div>
                    <div class="col-lg-4 col-md-6">
                        <div class="btn_add_to_cart"><a href="#0" class="btn_1">Add to Cart</a></div>
                    </div>
                </div>
            </div>
            <!-- /prod_info -->

        </div>
    </div>
    <!-- /row -->
</div>
<!-- /container -->

<div class="tabs_product">
    <div class="container">
        <ul class="nav nav-tabs" role="tablist">
            <li class="nav-item">
                <a id="tab-A" href="#pane-A" class="nav-link active" data-toggle="tab" role="tab">Description</a>
            </li>
            <li class="nav-item">
                <a id="tab-B" href="#pane-B" class="nav-link" data-toggle="tab" role="tab">Reviews</a>
            </li>
        </ul>
    </div>
</div>
<!-- /tabs_product -->
<div class="tab_content_wrapper">
    <div class="container">
        <div class="tab-content" role="tablist">
            <div id="pane-A" class="card tab-pane fade show active" role="tabpanel" aria-labelledby="tab-A">
                <div class="card-header" role="tab" id="heading-A">
                    <h5 class="mb-0">
                        <a class="collapsed" data-toggle="collapse" href="#collapse-A" aria-expanded="false" aria-controls="collapse-A">
                            Description
                        </a>
                    </h5>
                </div>
                <div id="collapse-A" class="collapse" role="tabpanel" aria-labelledby="heading-A">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <h3>Details</h3>
                                <p>@Html.Raw(Model.THONGTIN)</p>
                            </div>
                            <div class="col-md-6">
                                @if (ViewBag.InfoProduct != null)
                                {
                    <h3>Thông Tin Sản Phẩm</h3>
                                    <div class="table-responsive">
                                        <table class="table table-sm table-striped">
                                            <tbody>
                                                @if (ViewBag.InfoProduct.VIXULY != null && ViewBag.InfoProduct.VIXULY.Length > 0)
                                                {
                                <tr>
                                    <td><strong>Vi Xử Lý</strong></td>
                                    <td>@ViewBag.InfoProduct.VIXULY</td>
                                </tr>}
                                                @if (ViewBag.InfoProduct.MANHINH != null && ViewBag.InfoProduct.MANHINH.Length > 0)
                                                {
                                <tr>
                                    <td><strong>Màn Hình</strong></td>
                                    <td>@ViewBag.InfoProduct.MANHINH</td>
                                </tr>}
                                                @if (ViewBag.InfoProduct.RAM != null && ViewBag.InfoProduct.RAM.Length > 0)
                                                {
                                <tr>
                                    <td><strong>RAM</strong></td>
                                    <td>@ViewBag.InfoProduct.RAM</td>
                                </tr>
}
                                                @if (ViewBag.InfoProduct.CARDDOHOA != null && ViewBag.InfoProduct.CARDDOHOA.Length > 0)
                                                {
                                <tr>
                                    <td><strong>Đồ Họa</strong></td>
                                    <td>@ViewBag.InfoProduct.CARDDOHOA</td>
                                </tr>
}
                                                @if (ViewBag.InfoProduct.LUUTRU != null && ViewBag.InfoProduct.LUUTRU.Length > 0)
                                                {
                                <tr>
                                    <td><strong>Lưu Trữ</strong></td>
                                    <td>@ViewBag.InfoProduct.LUUTRU</td>
                                </tr>}
                                                @if (ViewBag.InfoProduct.PIN != null && ViewBag.InfoProduct.PIN.Length > 0)
                                                {
                                <tr>
                                    <td><strong>Pin</strong></td>
                                    <td>@ViewBag.InfoProduct.PIN</td>
                                </tr>
}
                                                @if (ViewBag.InfoProduct.KETNOI != null && ViewBag.InfoProduct.KETNOI.Length > 0)
                                                {
                                <tr>
                                    <td><strong>Kết Nối</strong></td>
                                    <td>@ViewBag.InfoProduct.KETNOI</td>
                                </tr>}
                                                @if (ViewBag.InfoProduct.TRONGLUONG != null && ViewBag.InfoProduct.TRONGLUONG.Length > 0)
                                                {
                                <tr>
                                    <td><strong>Trọng Lượng</strong></td>
                                    <td>@ViewBag.InfoProduct.TRONGLUONG</td>
                                </tr>
}
                                                @if (ViewBag.InfoProduct.HEDIEUHANH != null && ViewBag.InfoProduct.HEDIEUHANH.Length > 0)
                                                {
                                <tr>
                                    <td><strong>Hệ Điều Hành</strong></td>
                                    <td>@ViewBag.InfoProduct.HEDIEUHANH</td>
                                </tr>}
                                                @if (ViewBag.InfoProduct.MAUSAC != null && ViewBag.InfoProduct.MAUSAC.Length > 0)
                                                {
                                <tr>
                                    <td><strong>Màu Sắc</strong></td>
                                    <td>@ViewBag.InfoProduct.MAUSAC</td>
                                </tr>
}
                                            </tbody>
                                        </table>
                                    </div>}

                                <!-- /table-responsive -->
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div id="pane-B" class="card tab-pane fade" role="tabpanel" aria-labelledby="tab-B">
                <div class="card-header" role="tab" id="heading-B">
                    <h5 class="mb-0">
                        <a class="collapsed" data-toggle="collapse" href="#collapse-B" aria-expanded="false" aria-controls="collapse-B">
                            Reviews
                        </a>
                    </h5>
                </div>
                <div id="collapse-B" class="collapse" role="tabpanel" aria-labelledby="heading-B">
                    <div class="card-body">
                        <div class="row justify-content-between" style="flex-wrap:wrap">
                            @foreach (DANHGIA dg in ViewBag.ListReview)
                            {
                <div class="col-lg-6">
                    <div class="review_content">
                        <div class="clearfix add_bottom_10">
                            <span class="rating">
                                <i class="icon-star voted"></i>
                                <i class="icon-star voted"></i>
                                <i class="icon-star voted"></i>
                                <i class="icon-star voted"></i>
                                <i class="icon-star voted"></i>

                                <em>@dg.XEPHANG /5.0</em>
                            </span>
                            <em>@dg.NGAYGIO</em>
                        </div>
                        <h4>@dg.TIEUDE</h4>
                        <p>@dg.NOIDUNG</p>
                    </div>
                </div>}

                        </div>
                        <div class="row">
                            <div class="col-6">
                                <p class="text-left"><a href="@Url.Action("Review","Home",new {id = Model.ID_SP })" class="btn_1">Đăng Nhận Xét</a></p>
                            </div>
                        </div>
                        <!-- /card-body -->
                    </div>
                </div>
            </div>
            <!-- /tab-content -->
        </div>
    </div>

    @Html.Action("ProductRelatedPartial", "Partial", new { loai = Model.ID_LOAI, brand = Model.ID_BRAND })

    <div class="feat">
        <div class="container">
            <ul>
                <li>
                    <div class="box">
                        <i class="ti-gift"></i>
                        <div class="justify-content-center">
                            <h3>Miễn Phí Giao Hàng</h3>
                            <p>Cho các đơn hàng hơn 2,000,000 VND</p>
                        </div>
                    </div>
                </li>
                <li>
                    <div class="box">
                        <i class="ti-wallet"></i>
                        <div class="justify-content-center">
                            <h3>Thanh Toán Bảo Mật</h3>
                            <p>100% Thanh Toán Bảo Mật</p>
                        </div>
                    </div>
                </li>
                <li>
                    <div class="box">
                        <i class="ti-headphone-alt"></i>
                        <div class="justify-content-center">
                            <h3>Hỗ Trợ 24/7</h3>
                            <p>Luôn hỗ trợ khách hành trực tuyến</p>
                        </div>
                    </div>
                </li>
            </ul>
        </div>
    </div>
    <!--/feat-->
    <script src="~/assets/js/sticky_sidebar.min.js"></script>
    <script>
        // Sticky sidebar
        $('#sidebar_fixed').theiaStickySidebar({
            minWidth: 991,
            updateSidebarHeight: false,
            additionalMarginTop: 90
        });
    </script>
