<script>function checkbox_to_value() {
        let arr_brand = [];
        $(".FilterBrandCheckBox:checked").each(function () {
            arr_brand.push($(this).val());
        })
        $("#FilterValue").val(arr_brand.join(","));
    }

    $(document).ready(function () {
        checkbox_to_value()
        $(".FilterBrandCheckBox").on("click", checkbox_to_value);
    });</script>
