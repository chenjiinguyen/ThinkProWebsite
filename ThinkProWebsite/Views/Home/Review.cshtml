@model ThinkProWebsite.Models.SANPHAM
@{
    ViewBag.Title = "Review";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- SPECIFIC CSS -->
<link href="/assets/css/leave_review.css" rel="stylesheet">
<main>


    <div class="container margin_60_35">

        <div class="row justify-content-center">
            <div class="col-lg-8">
                <form method="post" class="write_review">
                    <input name="product" type="hidden" value="@Model.ID_SP">
                    <h1>Viết đánh giá cho sản phẩm  @Model.TENSP </h1>
                    <div class="rating_submit">
                        <div class="form-group">
                            <label class="d-block">Đánh giá</label>
                            <span class="rating mb-0">
                                <input type="radio" class="rating-input" id="5_star" name="danhgia" value="5"><label for="5_star" class="rating-star"></label>
                                <input type="radio" class="rating-input" id="4_star" name="danhgia" value="4"><label for="4_star" class="rating-star"></label>
                                <input type="radio" class="rating-input" id="3_star" name="danhgia" value="3"><label for="3_star" class="rating-star"></label>
                                <input type="radio" class="rating-input" id="2_star" name="danhgia" value="2"><label for="2_star" class="rating-star"></label>
                                <input type="radio" class="rating-input" id="1_star" name="danhgia" value="1" required><label for="1_star" class="rating-star"></label>
                            </span>
                        </div>
                    </div>
                    <!-- /rating_submit -->
                    <div class="form-group">
                        <label>Tiêu đề cho đánh giá của bạn</label>
                        <input name="review_tieude" class="form-control" type="text" placeholder="Nếu bạn có thể nói điều đó trong một câu, bạn sẽ nói gì?" required>
                    </div>
                    <div class="form-group">
                        <label>Nội dung đánh giá</label>
                        <textarea name="review_noidung" class="form-control" style="height: 180px;" placeholder="Viết nhận xét của bạn để giúp những người khác tìm hiểu về doanh nghiệp trực tuyến này" required></textarea>
                    </div>
                    @*<div class="form-group">
                            <div class="checkboxes float-left add_bottom_15 add_top_15">
                                <label class="container_check">
                                    Eos tollit ancillae ea, lorem consulatu qui ne, eu eros eirmod scaevola sea. Et nec tantas accusamus salutatus, sit commodo veritus te, erat legere fabulas has ut. Rebum laudem cum ea, ius essent fuisset ut. Viderer petentium cu his.
                                    <input type="checkbox">
                                    <span class="checkmark"></span>
                                </label>
                            </div>
                        </div>*@
                    <input type="submit" class="btn_1" value="Đánh giá vô danh">
                </form>
            </div>
        </div>
        <!-- /row -->
    </div>
    <!-- /container -->
</main>
<!--/main-->