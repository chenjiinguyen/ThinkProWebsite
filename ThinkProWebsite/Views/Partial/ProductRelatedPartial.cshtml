@model List<ThinkProWebsite.Models.SANPHAM>

<div class="container margin_60_35">
    <div class="main_title">
        <h2>LIÊN QUAN</h2>
        <span>Sản Phẩm</span>
        <p>Các sản phẩm có liên quan đến sản phẩm trên.</p>
    </div>
    <div class="owl-carousel owl-theme products_carousel">
        @foreach (var product in Model)
        {
            <div class="item">
                <div class="grid_item">
                    @*<span class="ribbon off">-50%</span>*@
                    <figure>
                        <a href="@Url.Action("Product","Home",new {id = product.ID_SP })">
                            <img class="owl-lazy" src="~/assets/img/products/product_placeholder_square_medium.jpg" data-src="@product.ANH_SP" alt="">
                        </a>
                    </figure>
                    @*<div class="rating"><i class="icon-star voted"></i><i class="icon-star voted"></i><i class="icon-star voted"></i><i class="icon-star voted"></i><i class="icon-star"></i></div>*@
                    <a href="@Url.Action("Product","Home",new {id = product.ID_SP })">
                        <h3>@product.TENSP</h3>
                    </a>
                    <div class="price_box">
                        <span class="new_price">@string.Format("{0:N0}", product.GIATIEN) @product.DONVITINH</span>
                        @*<span class="old_price">$155.00</span>*@
                    </div>

                </div>
                <!-- /grid_item -->
            </div>
            <!-- /item -->
        }

    </div>
    <!-- /products_carousel -->
</div>
<!-- /container -->