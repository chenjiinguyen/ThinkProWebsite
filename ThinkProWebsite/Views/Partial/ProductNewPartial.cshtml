@model List<ThinkProWebsite.Models.SANPHAM>

<hr class="mb-0">
<div class="container margin_60_35">
    <div class="main_title">
        <h2>MỚI</h2>
        <span>Sản Phẩm</span>
        <p>Những sản phẩm vừa mở bán</p>
    </div>
    <div class="row small-gutters">
        @foreach (var product in Model)
        {
            <div class="col-6 col-md-4 col-xl-3">
                <div class="grid_item">
                    @*<span class="ribbon off">-50%</span>*@
                    <figure>
                        <a href="@Url.Action("Product","Home",new {id = product.ID_SP })">
                            <img class="img-fluid lazy" src="~/assets/img/products/product_placeholder_square_medium.jpg" data-src="@product.ANH_SP" alt="">
                        </a>
                    </figure>
                    @*<div class="rating"><i class="icon-star voted"></i><i class="icon-star voted"></i><i class="icon-star voted"></i><i class="icon-star voted"></i><i class="icon-star"></i></div>*@
                    <a href="@Url.Action("Product","Home",new {id = product.ID_SP })">
                        <h3>@product.TENSP</h3>
                    </a>
                    <div class="price_box">
                        <span class="new_price">@string.Format("{0:N0}", product.GIATIEN) @product.DONVITINH</span>
                        @*<span class="old_price">$155.00</span>*@
                    </div>

                </div>
                <!-- /grid_item -->
            </div>
            <!-- /col -->
            <div class="item">

            </div> <!-- /item -->
        }

    </div>
    <!-- /row -->
</div>
<!-- /container -->